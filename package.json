{
  "name": "eksi-sozluk",
  "version": "4.0.1",
  "description": "Eksi Sozluk NodeJS client.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --config ./jest.config.js",
    "test:coverage": "npm test -- --coverage && cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "doc": "jsdoc --configure jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ridvanaltun/eksi-sozluk.git"
  },
  "keywords": [
    "ekşi",
    "sözlük",
    "ekşisözlük",
    "eksisozluk"
  ],
  "author": "Rıdvan Altun",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ridvanaltun/eksi-sozluk/issues"
  },
  "homepage": "https://github.com/ridvanaltun/eksi-sozluk#readme",
  "dependencies": {
    "axios": "^0.20.0",
    "cheerio": "^1.0.0-rc.3",
    "moment": "^2.29.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.1",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jsdoc": "^3.6.6",
    "lint-staged": "^10.4.0",
    "minami": "^1.2.3",
    "semantic-release": "^17.1.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint — fix --no-error-on-unmatched-pattern",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
