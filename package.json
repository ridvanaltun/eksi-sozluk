{
  "name": "eksi-sozluk",
  "version": "1.0.0",
  "description": "Ekşi Sözlük için yazılmış bir paket.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ridvanaltun/eksi-sozluk.git"
  },
  "keywords": [
    "ekşi",
    "sözlük",
    "ekşisözlük",
    "eksisozluk"
  ],
  "author": "Rıdvan Altun",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ridvanaltun/eksi-sozluk/issues"
  },
  "homepage": "https://github.com/ridvanaltun/eksi-sozluk#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "moment": "^2.26.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint — fix --no-error-on-unmatched-pattern",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
